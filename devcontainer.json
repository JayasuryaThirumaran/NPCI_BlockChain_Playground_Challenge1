{
  "name": "Chat Server Development",
  "image": "mcr.microsoft.com/devcontainers/go:1.21", // Go environment
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": ["golang.go"], // Add useful extensions
  "postCreateCommand": "apt-get update && apt-get install -y netcat && go mod tidy" // Ensure Netcat is installed and dependencies are set up
}

